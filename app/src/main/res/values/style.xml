<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="text_medium" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/graphik_regular</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#272727</item>
    </style>

    <style name="CustomRangeSlider" parent="Widget.MaterialComponents.Slider">
        <item name="thumbColor">@color/white</item>
        <item name="thumbStrokeColor">@color/black</item>
        <item name="thumbStrokeWidth">1dp</item>
        <item name="trackColorActive">#3D3BFF</item>
        <item name="trackColorInactive">#4D3D3BFF</item>

    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_menu</item>
    </style>

</resources>